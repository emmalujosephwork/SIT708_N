<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8F9FA"
    android:padding="24dp">

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnCreateAdvert"
        android:layout_width="250dp"
        android:layout_height="56dp"
        android:text="CREATE A NEW ADVERT"
        android:textAllCaps="true"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:backgroundTint="#4A7C59"
        android:elevation="6dp"
        app:cornerRadius="28dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/btnShowAll"
        android:layout_marginBottom="16dp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnShowAll"
        android:layout_width="250dp"
        android:layout_height="56dp"
        android:text="SHOW ALL LOST &amp; FOUND ITEMS"
        android:textAllCaps="true"
        android:textStyle="bold"
        android:textColor="#4A7C59"
        android:backgroundTint="#D9E6D9"
        android:elevation="3dp"
        app:cornerRadius="28dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnCreateAdvert"
        app:layout_constraintBottom_toTopOf="@id/btnShowOnMap"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnShowOnMap"
        android:layout_width="250dp"
        android:layout_height="56dp"
        android:text="SHOW ON MAP"
        android:textAllCaps="true"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:backgroundTint="#4A7C59"
        android:elevation="6dp"
        app:cornerRadius="28dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnShowAll"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="16dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
