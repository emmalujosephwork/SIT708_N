<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/create_advert_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    android:background="#F8F4FF">

    <LinearLayout
        android:id="@+id/form_container"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <RadioGroup
            android:id="@+id/postTypeGroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="20dp">

            <RadioButton
                android:id="@+id/rbLost"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lost"
                android:checked="true"
                android:textColor="#5C3D99"
                android:textSize="16sp"/>

            <RadioButton
                android:id="@+id/rbFound"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Found"
                android:textColor="#5C3D99"
                android:textSize="16sp"
                android:layout_marginStart="24dp"/>

        </RadioGroup>

        <EditText
            android:id="@+id/etName"
            android:layout_width="280dp"
            android:layout_height="48dp"
            android:hint="Name"
            android:inputType="textPersonName"
            android:background="@drawable/rounded_edittext"
            android:paddingHorizontal="16dp"
            android:textColor="#4A4A4A"
            android:textSize="16sp"
            android:layout_marginBottom="12dp"/>

        <EditText
            android:id="@+id/etPhone"
            android:layout_width="280dp"
            android:layout_height="48dp"
            android:hint="Phone"
            android:inputType="phone"
            android:background="@drawable/rounded_edittext"
            android:paddingHorizontal="16dp"
            android:textColor="#4A4A4A"
            android:textSize="16sp"
            android:layout_marginBottom="12dp"/>

        <EditText
            android:id="@+id/etDescription"
            android:layout_width="280dp"
            android:layout_height="72dp"
            android:hint="Description"
            android:inputType="textMultiLine"
            android:minLines="3"
            android:background="@drawable/rounded_edittext"
            android:paddingHorizontal="16dp"
            android:paddingTop="12dp"
            android:textColor="#4A4A4A"
            android:textSize="16sp"
            android:layout_marginBottom="12dp"/>

        <EditText
            android:id="@+id/etDate"
            android:layout_width="280dp"
            android:layout_height="48dp"
            android:hint="Date"
            android:inputType="date"
            android:background="@drawable/rounded_edittext"
            android:paddingHorizontal="16dp"
            android:textColor="#4A4A4A"
            android:textSize="16sp"
            android:layout_marginBottom="12dp"/>

        <EditText
            android:id="@+id/etLocation"
            android:layout_width="280dp"
            android:layout_height="48dp"
            android:hint="Location"
            android:inputType="text"
            android:focusable="false"
            android:clickable="true"
            android:background="@drawable/rounded_edittext"
            android:paddingHorizontal="16dp"
            android:textColor="#4A4A4A"
            android:textSize="16sp"
            android:layout_marginBottom="20dp"/>

        <Button
            android:id="@+id/btnGetCurrentLocation"
            android:layout_width="280dp"
            android:layout_height="48dp"
            android:text="GET CURRENT LOCATION"
            android:backgroundTint="#5C3D99"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:layout_marginBottom="12dp"
            android:padding="12dp"
            android:background="@drawable/rounded_button"/>

        <Button
            android:id="@+id/btnSave"
            android:layout_width="280dp"
            android:layout_height="48dp"
            android:text="SAVE"
            android:backgroundTint="#5C3D99"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:padding="12dp"
            android:background="@drawable/rounded_button"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
